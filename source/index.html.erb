<%
  homepage = get_homepage()
  puts homepage
  content_for :page_title, homepage.page_heaading
  content_for :page_heading, homepage.page_heaading
  content_for :page_intro, Kramdown::Document.new(homepage.intro).to_html if homepage.intro
  content_for :page_description, homepage.page_summary
  content_for :page_image_url, homepage.social_image.url if homepage.social_image
  content_for :page_masthead_text, homepage.masthead_text if homepage.masthead_text
  content_for :page_masthead_image, homepage.masthead_background_image.first.url if homepage.masthead_background_image
%>

<%= Kramdown::Document.new(homepage.body_of_content).to_html if homepage.body_of_content %>

<% if homepage.include? 'products' %>
  <%= partial 'partials/product_summary_list', locals: { products: homepage.products } %>
<% end %>

<% if homepage.include? 'services' %>
  <%= partial 'partials/services_summary_list', locals: { services: homepage.services } %>
<% end %>

<% if homepage.include? 'biographies' %>
  <%= partial 'partials/biographies_summary_list', locals: { bios: homepage.biographies } %>
<% end %>

<% if homepage.include? 'testimonials' %>
  <%= partial 'partials/testimonials_summary_list', locals: { testimonials: homepage.testimonials } %>
<% end %>
