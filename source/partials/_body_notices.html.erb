<div class="notices" id="notices">
<% if data.content.notices.count > 0 %>
  <% data.content.notices.each do |n_id, n| %>
  <div class="notice" data-type="<%= n.notice_type || 'info' %>" id="<%= n.slug %>">
    <svg viewBox="0 0 512 512">
      <use xlink:href="#icon_<%= n.notice_type.downcase %>" />
    </svg>
    <div>
      <h2><%= n.notice_heading %></h2>
      <div class="n_content"><%= Kramdown::Document.new(n.notice_message).to_html %></div>
    </div>
  </div>
  <% end %>
<% end %>
</div>
