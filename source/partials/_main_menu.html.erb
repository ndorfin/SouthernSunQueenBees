<nav>
  <h2>Menu</h2>
  <ul>
    <% get_top_level_menu_items().each do |page_id, page| %>
      <li>
        <% if page.url == current_page.url.parameterize %>
        <strong><%= page.page_name %></strong>
        <% else %>
        <a href="<%= config[:base_url] + page.url %>"><%= page.page_name %></a>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>
