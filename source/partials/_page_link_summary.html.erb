<div class="media_block">
  <div class="mb_content service_content">
    <h2 class="heading heading_subheading"><%= page_link.page_heaading %></h2>
    <%= Kramdown::Document.new(page_link.page_summary).to_html %>
    <p class="call_to_action">
      <a class="button button_primary" href="/<%= page_link.url %>">
        More info<span class="screenreader_only"> on <%= page_link.page_heaading %>
      </a>
    </p>
  </div>
  <div class="mb_image">
    <img loading="lazy" src="<%= page_link.image_for_summary.url %>?fm=jpg&fl=progressive&q=70&w=640" alt="<%= page_link.image_for_summary.description %>">
  </div>
</div>
