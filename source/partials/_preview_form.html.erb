<contentful-credentials>
  <dialog id="dialog_credentials">
    <h3>Save your Contentful credentials</h3>
    <form action="." method="dialog">
      <div class="form_row">
        <label for="text_space">Space:</label>
        <div class="form_field">
          <input type="text" id="text_space" name="space" required>
        </div>
      </div>
      <div class="form_row">
        <label for="text_token">Token:</label>
        <div class="form_field">
          <input type="text" id="text_token" name="token" required>
        </div>
      </div>
      <div class="form_row form_actions">
        <button type="submit">Save</button>
      </div>
    </form>
  </dialog>
</contentful-credentials>
