<div class="media_block">
  <div class="mb_content service_content">
    <h4 class="heading heading_subheading"><%= service.title %></h4>
    <%= Kramdown::Document.new(service.service_summary).to_html %>
  </div>
  <% if service.photo %>
  <div class="mb_image">
    <%= "<img class=\"service_image\" src=\"#{service.photo.url}?fm=jpg&fl=progressive&q=70&w=800\" alt=\"#{service.title}\">" %>
  </div>
  <% end %>
</div>
