<% if testimonial.background_image %>
<article class="testimonial" style="background-image: url(<%= testimonial.background_image.url %>?fm=jpg&fl=progressive&q=70&w=1280);">
<% else %>
<article class="testimonial">
<% end %>
  <figure>
    <blockquote>
      <%= Kramdown::Document.new(testimonial.quote).to_html %>
    </blockquote>
    <% if testimonial.quotee %>
    <figcaption>
      <% if testimonial.photo && testimonial.photo.url %>
        <img src="<%= "#{testimonial.photo.url}?w=160&fm=jpg&q=80&fl=progressive" %>" alt="<%= testimonial.quotee %>">
      <% end %>
      <cite><%= testimonial.quotee %></cite>
    </figcaption>
    <% end %>
  </figure>
</article>
