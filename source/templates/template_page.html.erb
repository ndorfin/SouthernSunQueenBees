<%
  content_for :page_title, page.page_heaading
  content_for :page_heading, page.page_heaading
  content_for :page_intro, Kramdown::Document.new(page.intro).to_html
  content_for :page_description, page.page_summary
  content_for :page_image_url, page.social_image if page.social_image
%>

<%= Kramdown::Document.new(page.body_of_content).to_html %>

<% if page.include? 'products' %>
  <%= partial 'partials/product_summary_list', locals: { products: page.products.to_a } %>
<% end %>

<% if page.include? 'services' %>
  <%= partial 'partials/services_summary_list', locals: { services: page.services[1] } %>
<% end %>

<% if page.include? 'biographies' %>
  <%= partial 'partials/biographies_summary_list', locals: { bios: page.biographies[1] } %>
<% end %>

<% if page.include? 'testimonials' %>
  <%= partial 'partials/testimonials_summary_list', locals: { testimonials: page.testimonials[1] } %>
<% end %>



